{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:vue/essential"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["vue"],

    "rules": {
        "code": 120,
        "vue/max-attributes-per-line": ["error", { "singleline": 1 }],
        "indent": ["error", 4],
        "max-len": ["error", { "code": 120 }]
    }
}
